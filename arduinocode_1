#include <Servo.h>

Servo servo1;
Servo servo2;

const int button1Pin = 3;  // Button for servo1
const int button2Pin = 4;  // Button for servo2

int angle1 = 90;  // Initial position
int angle2 = 90;

int dir1 = 1;  // 1 = increasing, -1 = decreasing
int dir2 = 1;

void setup() {
  servo1.attach(9);
  servo2.attach(10);

  pinMode(button1Pin, INPUT_PULLUP);  // Active LOW
  pinMode(button2Pin, INPUT_PULLUP);

  servo1.write(angle1);
  servo2.write(angle2);
}

void loop() {
  // Button 1 controls servo1
  if (digitalRead(button1Pin) == LOW) {
    angle1 += dir1;

    // Reverse direction at limits
    if (angle1 >= 180) {
      angle1 = 180;
      dir1 = -1;
    } else if (angle1 <= 0) {
      angle1 = 0;
      dir1 = 1;
    }

    servo1.write(angle1);
    delay(10);
  }

  // Button 2 controls servo2
  if (digitalRead(button2Pin) == LOW) {
    angle2 += dir2;

    // Reverse direction at limits
    if (angle2 >= 180) {
      angle2 = 180;
      dir2 = -1;
    } else if (angle2 <= 0) {
      angle2 = 0;
      dir2 = 1;
    }

    servo2.write(angle2);
    delay(10);
  }
}
